    <modelVersion>4.0.0</modelVersion>
    <artifactId>oidcng</artifactId>
    <name>oidcng</name>

    <parent>
        <groupId>org.openconext</groupId>
        <artifactId>oidcng-parent</artifactId>
        <version>8.2.0-SNAPSHOT</version>
    </parent>

    <dependencyManagement>
